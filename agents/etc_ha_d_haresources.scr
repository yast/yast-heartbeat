/**
 * File:	etc_ha_d_haresources.scr
 * Summary:	Agent for reading/writing /etc/ha.d/haresources
 * Access:	read/write
 * Authors:	Martin Lazar <mlazar@suse.cz>
 * See:		heartbeat(8)
 *
 * $Id$
 */
.etc.ha_d.haresources

`ag_ini(
    `IniAgent( "/etc/ha.d/haresources",
	$[
	    "options"	: [ "global_values", "flat" ],
	    "comments"	: [ "^#.*", "^[ \t]*$" ],
	    "params"	: [ $[ "match" : [ "^[ \t]*([^ \t]+)[ \t]*(.*)$", "%s %s" ] ] ]
	]
))
